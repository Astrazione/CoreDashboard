<!DOCTYPE html>
<html lang="ru">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - CoreDashboard</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/CoreDashboard.styles.css" asp-append-version="true" />
</head>
<body>
	<header>
		<nav class="navbar navbar-custom navbar-expand-sm navbar-light border-bottom">
			<div class="container-fluid">
				<a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">Жменько Артём Юрьевич (Администратор)</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<a class="nav-link text-white" asp-area="" asp-controller="UploadedDbs" asp-action="Index">Управление пользователями</a>
						</li>
					</ul>
				</div>
			</div>

			<div class="d-inline-flex">
				<a class="btn brn-outline-success text-white" asp-area="" asp-controller="UploadedDbs" asp-action="Index">Редактирование баз данных</a>
				<button class="btn brn-outline-success text-white" data-bs-toggle="modal" data-bs-target="#exampleModal">Добавить пользователя</button>
				<button class="btn brn-outline-success text-white">Выход</button>
			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2024 - CoreDashboard - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
		</div>
	</footer>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
