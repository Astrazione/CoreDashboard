@model CoreDashboard.Models.UploadedDb

@{
    ViewData["Title"] = "Удаление";
}

<h1>Удаление</h1>

<h3>Вы действительно хотите удалить эту базу данных?</h3>
<div>
    <h4>UploadedDb</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UploadedDbName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UploadedDbName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UploadDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UploadDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User!.UserName) (@Html.DisplayFor(model => model.User!.UserType!.UserTypeName))
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Discipline)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Discipline!.DisciplineName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="UploadedDbId" />
        <button type="submit" value="Delete" class="btn btn-danger">Удалить</button>
        <button asp-action="Index" class="btn btn-outline-primary">Вернуться назад</button>
    </form>
</div>
