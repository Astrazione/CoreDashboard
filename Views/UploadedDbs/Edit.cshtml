@model CoreDashboard.Models.UploadedDb

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>UploadedDb</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UploadedDbId" />
            <div class="form-group" style="margin-bottom: 20px">
                <label asp-for="UploadedDbName" class="control-label"></label>
                <input asp-for="UploadedDbName" name="uploadedDbName" class="form-control" />
                <span asp-validation-for="UploadedDbName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-danger">Вернуться назад</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}